<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cecs343.bpmontor.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Doctor"
        android:textAllCaps="true"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">


        <Button
            android:id="@+id/sel_patient_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT PATIENT"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="150dp" />

        <Button
            android:id="@+id/view_med_sched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_med_sched"
            app:layout_constraintStart_toStartOf="@+id/button3"
            tools:layout_editor_absoluteY="25dp" />

        <Button
            android:id="@+id/view_med_hist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_med_hist"
            app:layout_constraintStart_toStartOf="@+id/button2"
            tools:layout_editor_absoluteY="91dp" />

        <Button
            android:id="@+id/view_bp_hist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_bp_hist"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="150dp" />

        <Button
            android:id="@+id/update_sched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Patient Med Schedule" />

        <Button
            android:id="@+id/record_bp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/record_bp" />

        <Button
            android:id="@+id/record_meds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/record_med" />




    </LinearLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="LOGOUT"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>